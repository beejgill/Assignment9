@{
    ViewBag.Title = "Edit Movie";
}

@model Assignment3.Models.MovieModel

<div class="mx-auto" style="width: 700px;">
    <form asp-action="EditList" method="post">
        <input type="hidden" name="MovieID" value="@Model.MovieID" />
        <div class="form-group">
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" class="form-control" placeholder="@Model.Category" />
        </div>

        <div class="form-group">
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" class="form-control" placeholder="@Model.Title" />
        </div>

        <div class="form-group">
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" class="form-control" placeholder="@Model.Year" />
        </div>

        <div class="form-group">
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" class="form-control" placeholder="@Model.Director" />
        </div>

        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating" class="form-control">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Edited">Was the film edited?</label>
            <select asp-for="Edited" class="form-control">
                <option value="">Select One</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" class="form-control" placeholder="@Model.LentTo" />
        </div>

        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" class="form-control" placeholder="@Model.Notes" />
        </div>

        <div style="text-align: center">
            <button type="submit">Update the movie</button>
        </div>
        <div asp-validation-summary="All"></div>

    </form>
</div>